                      <ui-input ui:model="{{pjDate.name}}" show-clear="true" placeholder="请输入姓名" maxlength="20"></ui-input>
                    </ui-col>
                </ui-row>
                <ui-row class="searchRow" >
                    <ui-col space-left="10" width="70" align="right" vertical-align="middle">
