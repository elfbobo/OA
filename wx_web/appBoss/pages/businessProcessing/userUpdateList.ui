                                  </ui-col>
                          </ui-row>
                          </ui-view>
                      </ui-col>
                  </ui-row>
              </ui-view>
            <ui-view style="text-align:center;padding-top:20px"  ui:show="{{(props && props.length>0) ? false : true}}">
