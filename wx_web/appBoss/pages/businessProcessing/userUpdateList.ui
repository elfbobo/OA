<script>
export default {
  config: {
    navigationBarTitleText: "信息维护",
    title:'信息维护',
    navigationStyle: 'custom',
  },
  data() {
    return {
      pullDownDivHeight:100,
      // 下拉刷新（初始状态）
      proportion: 0,
      state: 1,
      loadMore: true,
      pullDown: {
        distance: 60,
        onBegin: this.handleBegin,
        onActive: this.handleActive,
        onAfter: this.handleAfter
      },
      //上下拉刷新结束
      //列表开始
      props:[],//列表信息
      pjPage:{//返回分页信息存储
          pageNum : '',
          pageSize: '',
          size : '',
          startRow : '',
          endRow : '',
          total : '0',
          pages : ''
      },
      pjDate:{
        pageNum:1,//请求第几
        pageSize:8,//每页个数
        name:'',//姓名
        idCardNo:'',//身份证
        phone:''//手机号 
        //另有多余可扩展参数startTime  endTime   格式yyyy-MM-dd
      },//提交参数
      //列表结束
      //搜索条件模态框开始
      seachShow1:false,
      //搜索条件模态框结束
    }
  },
  methods: {
  	//上下拉刷新开始
    handleLoadMore () {//加载更多
       
          if(this.pjDate.pageNum<=this.pjPage.pages){
              this.getPjList()
           }else{
             this.loadMore = false
              return false
           }
     
    },
    getPjList (){//请求数据
        this.openPopupHide()
        this.$http('post',ui.getApp().apis.YWCX.STUDENTPAGER,this.pjDate,(res)=>{
                    this.pjPage.pageNum = res.page.pageNum
                    this.pjPage.pageSize = res.page.pageSize
                    this.pjPage.size = res.page.size
                    this.pjPage.startRow = res.page.startRow
                    this.pjPage.endRow = res.page.endRow
                    this.pjPage.total = res.page.total
                    this.pjPage.pages = res.page.pages
                    let list = res.page.list
                    list.forEach((value,index) => {
                      if(value.headimg){
                        value.headImg = ui.getApp().imgUrlHeader+value.headImg
                      }else{
                        value.headImg = require('#/images/portrait_bg.png')
                      }
                     
                    });
                   this.props = this.props.concat(list)
                   this.pjDate.pageNum ++
                   if(this.pjDate.pageNum > this.pjPage.pages){
                     this.loadMore = false
                     return false
                   }

        })
      
    },
    handleBegin ({ distance, direction }) {
      this.proportion = distance / 40
      // 拉满40px
      if (this.proportion >= 1) {
        if (this.state === 1 && direction === 'down') {
          // 释放刷新
          this.state = 2

          // 300ms吉祥物翻转时间
          window.setTimeout(() => {
            // 刷新中...
            this.state = 3
          }, 300)
        }
      } else {
        this.state = 1
      }
    },
    handleActive () {//下拉刷新
           this.loadMore = true
           this.props = []//清空列表
           this.pjDate.pageNum = 1
           this.getPjList ()
           this.state = 4
    },
    handleAfter (flag) {//下拉刷新绑定数据
      this.proportion = 0
      this.state = 1
    },
    tongguo(stuId){
      this.$http('get',ui.getApp().apis.YWCL.AUDIT,{id:stuId,reduceStatus:'10'},(res)=>{
        if(res.code == 200){
          ui.showToast({ title: '审批通过', icon: 'success'})
          this.handleActive()
        }
      })
    },
    changeHandler1 (state ,index) {
      if (this.el !== index) {
        if (this.el!== undefined) {
          this.props[this.el].switcher = 'off'
        }
        this.props[index].switcher = 'on'
        this.el = index
      }
    },
    godiscountdetails(item){//详情
      sessionStorage.setItem("bossStudentMessThis",JSON.stringify(item))
      ui.navigateTo({
        url: '/pages/businessProcessing/discountdetails?type=xxwh'
      })
      
    },
    openPopup1 () {//模态框
      if(this.seachShow1){
        this.seachShow1 = false
      }else{
        this.seachShow1 = true
      }
    },
    openPopupHide (){
      this.seachShow1 = false
    },
    openPopupShow (){
      this.seachShow1 = true
    },
    goback(){
       ui.navigateBack()
    },
    formReset(){
      //重置搜索条件
      this.pjDate.phone=''
      this.pjDate.idCardNo=''
      this.pjDate.name=''
      //搜索
      this.handleActive()
    },
    calPhone(phone){
        if(phone){
            ui.makePhoneCall({
              phoneNumber: phone
            })
        }else{
            ui.showToast({ title: '暂无手机号'})
        }
        
    },
    updateUser(item){
      import(`#/pages/dialogs/dialogUserUpdate.ui`).then((content) => {
            ui.showDialog({
              // 窗体标题
              title: '修改信息',
              content: content,
              statusBarColor: 'black',
              headerStyle: {//设置dialog  nav样式
                    color: '#666'
                },
              // 向dialog1.ui传入数据
              data: {
                userItem:item
              },
              // 接收ui.hideDialog回传的数据
              onHide: (data) => {
                if (data && data.type==true) {
                   ui.showToast({ title: '修改成功！', icon: 'success', duration: 2000 })
                   this.handleActive()
                }
              }
            })
          })
    }
  },
  mounted() {
    this.pullDownDivHeight=this.getSystemMessage().windowHeight-86
    this.getPjList()
  }
}
</script>

