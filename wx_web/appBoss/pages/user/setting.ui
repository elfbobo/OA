<script>
  // setting.js
export default {
  config: {
    navigationBarTitleText: '设置',
    backgroundColor: '#F2F2F2',
    delay:false
  },
  data () {
    return {}
  },
  methods: {
    navigateBack () {
      ui.navigateBack()
    },
    loginPage () {
      import(`#/pages/login`).then((content) => {
        ui.showDialog({
          content: content,
          statusBarColor: 'black',
          // 向dialog2.ui传入数据
          data: {

          },
          // 接收ui.hideDialog回传的数据
          onHide: (data) => {
            
          }
        })
      })
    },
    logOut () {
      let userinfo = localStorage.getItem('bossInfo')
      let userinfoList = localStorage.getItem('bossInfoList')
      if (userinfo) {
          userinfo = JSON.parse(userinfo)
          localStorage.removeItem("bossInfo");//清除用户数据
          localStorage.removeItem("bossToken");//清除takon
          ui.getApp().Ajax.header.token = null //清空全局变量中的token
          ui.getApp().Ajax.header.userId = null //清空全局变量中的用户id
          ui.getApp().userInfo = null //清空全局变量中的用户数据
          if(userinfoList){
            userinfoList = JSON.parse(userinfoList)
            

            userinfoList.forEach(function (value,index) {
              if(value.id == userinfo.id){
                  userinfoList.splice(index,1);//删除登录历史中的账号信息
                  localStorage.setItem('bossInfoList',JSON.stringify(userinfoList))
                  return
              }
            })

         }
      }
      ui.redirectTo({
          url: '/pages/login'
      })
      

    },
    accountSecurity () {
      let userinfo = localStorage.getItem('bossInfo')
      if (userinfo) {
        ui.navigateTo({
          url: '/pages/user/userInfo'
        })
       
      } else {
         this.loginPage()
      }
    }
  }
}

</script>

